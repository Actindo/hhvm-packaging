set -e

ROOT="$(realpath "$(dirname $0)/..")"
VERSION=${VERSION:-"$(date +%Y.%m.%d)"}
DISTRO=${DISTRO:-"$1"}
if [ -z "$DISTRO" ]; then
  echo "Environment variable DISTRO must be set or passed as an argument"
  exit 1
fi

if [ -z "$VERSION" ]; then
  PAYLOAD="$(echo "{\"distros\": [\"${DISTRO}\"]}")"
else
  PAYLOAD="$(echo "{\"distros\": [\"${DISTRO}\"], \"version\": \"${VERSION}\"}")"
fi

aws lambda invoke \
  --function-name hhvm-build-binary-packages \
  --payload "${PAYLOAD}" \
  /dev/stdout --region us-west-2
