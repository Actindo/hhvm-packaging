ROOT="$(realpath "$(dirname $0)/..")"
OUT="$ROOT/out/"
NODIST="$ROOT/nodist/"
DISTRO=${1:-"debian-8-jessie"}
DOCKER_BASE="$(<"${ROOT}/${DISTRO}/DOCKER_BASE")"
IS_NIGHTLY=${IS_NIGHTLY:-true}

if [ ! -d "${ROOT}/${DISTRO}" ]; then
  echo "Unsupported distro: ${DISTRO}"
  exit 1
fi

export COMPILER_ID

export VERSION
export IS_NIGHTLY

DOCKER_HOST=unix:///var/run/docker.sock DOCKER_TLS_VERIFY="" docker run \
  -e "VERSION" \
  -e "IS_NIGHTLY" \
  -e "COMPILER_ID" \
  -v "$OUT":/var/out \
  -v "$NODIST":/var/nodist \
  -v "$ROOT":/opt/hhvm-packaging:ro \
  -v "${ROOT}/${DISTRO}":/opt/hhvm-distro-packaging:ro \
  "${DOCKER_BASE}" \
  /opt/hhvm-distro-packaging/make-package
