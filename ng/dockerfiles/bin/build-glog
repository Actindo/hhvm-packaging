# of patent rights can be found in the PATENTS file in the same directory.

set -ex 

cd /tmp
VERSION=0.3.5
git clone https://github.com/google/glog.git google-glog
cd google-glog
git checkout v$VERSION
autoreconf
./configure \
  --enable-static \
  --disable-shared \
  --libdir=/usr/local/lib64
make -j8
make install
